@using OdeToFood.Core
@model Restaurant

    <div class="panel panel-default">
        <div class="panel-heading">
            <h3>@Model.Name</h3>
        </div>
        <div class="panel-body">
            <span>
                Location: @Model.Location
            </span>            
            <span>
                Cuisine: @Model.Cuisine
            </span>
        </div>
        <div class="panel-footer">
            <a asp-page="./detail"
               asp-route-restaurantId="@Model.Id"
               class="btn btn-lg"><i class="glyphicon glyphicon-zoom-in"></i></a>
            <a asp-page="./edit"
               asp-route-restaurantId="@Model.Id"
               class="btn btn-lg"><i class="glyphicon glyphicon-edit"></i></a>
            <a asp-page="./delete"
               asp-route-restaurantId="@Model.Id"
               class="btn btn-lg"><i class="glyphicon glyphicon-trash"></i></a>
        </div>
    </div>